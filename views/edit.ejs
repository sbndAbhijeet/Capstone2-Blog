<%- include('partials/header.ejs') %>


<div class="container d-flex justify-content-center align-items-start mt-5 vh-100">
    <div class="card shadow p-4" style="width: 700px;">
        <h3 class="text-center mb-4">Edit Your Post</h3>
        <form action="/edit/<%= post.id %>?_method=PUT" method="POST">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label><br>
                <input type="text" id="title" name="title" placeholder="Enter Title" class="form-control" 
                value="<%= post.title %>"
                required>
            </div>

            <div class="mb-3">
                <label for="message" class="form-label w-100">Message</label>
                <textarea name="message" id="message" class="form-control w-100" rows="10" cols="100"
                placeholder="Write your message..." 
                required><%= post.message %> </textarea>
            </div>
            
            <button type="submit" class="btn btn-primary w-100">Submit</button>
        </form>
    </div>
</div>

<%- include('partials/footer.ejs') %> 